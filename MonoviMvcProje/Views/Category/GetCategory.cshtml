@model MonoviMvcProje.Models.Entity.TblCategory

@{
    ViewBag.Title = "GetCategory";
    Layout = "~/Views/Shared/_MonoviLayout.cshtml";
}

<h2>Kategori Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{
    @Html.LabelFor(x => x.CategoryID)
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
    <br />
    <label>Kategori Adı:</label> @Html.TextBoxFor(x=>x.CategoryName, new { @class = "form-control" })
    <br />
    <button class="btn btn-warning">Güncelle</button>
}

