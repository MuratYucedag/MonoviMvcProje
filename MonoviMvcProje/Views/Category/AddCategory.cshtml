@model MonoviMvcProje.Models.Entity.TblCategory

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_MonoviLayout.cshtml";
}

<h2>Kategori Ekleme Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.CategoryName)
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
